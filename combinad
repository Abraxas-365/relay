	if c.PageID == "" {
		return ErrInvalidChannelConfig().WithDetail("reason", "page_id is required")
	}
	if c.PageToken == "" {
		return ErrInvalidChannelConfig().WithDetail("reason", "page_token is required")
	}
	return nil
}

